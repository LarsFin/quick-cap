datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  description String?
  status IncidentStatus @default(open)
}

model Service {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  description String?
}

enum IncidentStatus {
  open
  closed
}

generator client {
  provider = "prisma-client-js"
}
